# ========================================
# AI Dungeon Master Configuration
# ========================================
# Copy this file to .env and update values
# Environment variables override these defaults

# ========================================
# LangSmith Tracing (Optional)
# ========================================
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=ai-dungeon-master
LANGSMITH_TRACING=false

# ========================================
# Model Selection
# ========================================
# OPTION 1: Use Ollama (Local LLM) - DEFAULT
#   - Requires Ollama running locally
#   - Command: ollama serve
#   - Model options: qwen:7b, llama2, neural-chat, etc.
#   - Enable by setting CUSTOM_MODEL_ENABLED=false

CUSTOM_MODEL_ENABLED=false
MODEL_NAME=qwen:7b
MODEL_TEMPERATURE=0.7

# OPTION 2: Use Custom OpenAI-Compatible Endpoint
#   - For APIs like OpenAI, Azure OpenAI, vLLM, etc.
#   - Enable by setting CUSTOM_MODEL_ENABLED=true
#   - Requires CUSTOM_MODEL_API_KEY and CUSTOM_MODEL_BASE_URL

CUSTOM_MODEL_ENABLED=false
CUSTOM_MODEL_NAME=gpt-4o-mini
CUSTOM_MODEL_BASE_URL=https://api.openai.com/v1
CUSTOM_MODEL_API_KEY=sk-your-api-key-here

# ========================================
# D&D API
# ========================================
DND_API_BASE_URL=https://www.dnd5eapi.co/api

# ========================================
# Storage Paths
# ========================================
DATA_PATH=src/data/storage
LOGS_PATH=src/data/storage/logs
